<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_span="1"></View>

    <LinearLayout
        android:id="@+id/medExistsLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="medicine"></TextView>


        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/dosageFromTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:singleLine="false"
            android:text="dosage"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/symbolTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Symbols"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/intervalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Interval"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/howTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="How"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/whenTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="When"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/remarkTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Remark"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/symbolsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="1-1-1"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:src="@drawable/ic_deletel"></ImageView>


        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>
    </LinearLayout>

    <TextView
        android:id="@+id/noMedValuesTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin1"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="@dimen/padding5"
        android:text="No Medicine Details Found."
        android:textColor="@color/colorRed"
        android:textSize="@dimen/textSize18"
        android:textStyle="normal"
        android:visibility="gone" />

    <View
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>