<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_span="1"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:src="@drawable/ic_deletel"></ImageView>


        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/uidTxt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="UID"></TextView>


        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/patientNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:singleLine="false"
            android:text="Patient Name"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/ageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Age"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/sexTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Sex"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/createdDateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Created Date"></TextView>

        <View
            style="@style/DividerStyle"
            android:layout_span="1"></View>

        <TextView
            android:id="@+id/diseaseTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin1"
            android:layout_span="1"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:text="Disease"></TextView>

    </LinearLayout>

</LinearLayout>