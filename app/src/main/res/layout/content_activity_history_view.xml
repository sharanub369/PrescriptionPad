<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <com.prescriptionpad.app.android.util.CustomAutoCompleteTextView
            android:id="@+id/searchByUidEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_edit_text_bg"
            android:drawableEnd="@drawable/ic_action_search"
            android:focusableInTouchMode="true"
            android:hint="UID"
            android:inputType="number"
            android:padding="@dimen/padding10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14"
            android:textStyle="normal" />

        <com.prescriptionpad.app.android.util.CustomAutoCompleteTextView
            android:id="@+id/searchByNameEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_edit_text_bg"
            android:drawableEnd="@drawable/ic_action_search"
            android:focusableInTouchMode="true"
            android:hint="Patient Name"
            android:padding="@dimen/padding10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize14"
            android:textStyle="normal" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/detailsExistLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/cardViewRadius"
                card_view:cardElevation="@dimen/cardViewElevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/padding5"
                        android:text="@string/KEY_PATIENT_SUB_TITLE"
                        android:textColor="@color/headerColor"
                        android:textSize="@dimen/textSize18"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="UID:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientUidTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="456"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Name:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientNameTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="Sharan b"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Age/Sex:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientSexAgeTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="26/Male"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Mobile:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientMobileNoTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="8596745986"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="DOC"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientCreateDateTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="13 July 2018"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="DOB:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientDobTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="10 June 1990"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="PCode"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/pcodeTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="456"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Guardian:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/guardianTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="XYZ"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="B-Group:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/bloodGroupTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="AB+ve"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Email:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientEmailTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="Test@gmail.com"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:padding="@dimen/padding2"
                                    android:text="Address:"
                                    android:textColor="@color/colorCyanDark"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/patientAddressTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/padding2"
                                    android:text="Patient Address Here"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textSize14"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorCyanDark"></View>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceHeightSmall" />


                <LinearLayout
                    android:id="@+id/historyLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceHeightBig" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceHeightBig" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/detailsNoLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No Details Found for this Search Criteria."
            android:textColor="@color/colorCyanDark"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>