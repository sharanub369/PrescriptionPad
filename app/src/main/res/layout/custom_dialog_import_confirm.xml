<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialogTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/headerColor"
        android:gravity="center"
        android:padding="@dimen/padding10"
        android:text="Import Data"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorCyanDark"></View>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="Do you have backup file at specified location?"
            android:textColor="@color/colorCyanDark"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding5"
            android:text="Note: Please keep backup file inside of 'Prescription Pad' folder in device internal memory."
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize12"
            android:textStyle="normal" />


    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noTxtBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_button_shape"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="No"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yesTxtBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_button_shape"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="Yes, Import"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeightSmall" />
</LinearLayout>