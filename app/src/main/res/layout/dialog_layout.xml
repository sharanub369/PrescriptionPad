<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <TextView
        android:id="@+id/dialogTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Preview"
        android:textColor="@color/colorCyanDark"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorCyanDark"></View>


    <TextView
        android:id="@+id/saveSharePdfTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding10"
        android:singleLine='true'
        android:text="Share &amp; Save/Print as Pdf"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize16"
        android:textStyle="normal" />

    <View
        android:id="@+id/viewId"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/saveSharePdfTxt"
        android:background="@color/grayColor"
        android:padding="@dimen/padding10"></View>

    <!--<TextView-->
        <!--android:id="@+id/saveShareImageTxt"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/viewId"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->
        <!--android:padding="@dimen/padding10"-->
        <!--android:singleLine='true'-->
        <!--android:text="Share &amp; Save/Print as Image"-->
        <!--android:textColor="@color/colorBlack"-->
        <!--android:textSize="@dimen/textSize16"-->
        <!--android:textStyle="normal" />-->
    <TextView
        android:id="@+id/cancelBtnTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewId"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding10"
        android:singleLine='true'
        android:text="Cancel"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize16"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/saveShareImageTxt"
        android:background="@color/grayColor"
        android:padding="@dimen/padding10"></View>
</LinearLayout>