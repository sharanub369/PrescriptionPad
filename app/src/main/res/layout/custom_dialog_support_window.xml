<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialogTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/headerColor"
        android:gravity="center"
        android:padding="@dimen/padding10"
        android:text="Technical support"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorCyanDark"></View>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/supportTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="fill"
            android:padding="@dimen/padding10"
            android:text="@string/supportText"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize16"
            android:textStyle="normal" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelTxtBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_button_shape"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sendEmailTxtBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin2.5"
            android:layout_weight="1"
            android:background="@drawable/custom_button_shape"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="Send Email"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeightSmall" />
</LinearLayout>